#hpcarousel {
	position: relative;
	z-index: 1;
	height: 425px;
	overflow: hidden !important;
	width: 100%;
	max-width: 100%;
	margin: 0;
	padding: 0;

	button {
		width: 58px; 
		height: 78px;  
		background-color: transparent;
		background-image: url(#{$path-img}/bg-galleryarrows-116x78.png);
		background-repeat: no-repeat;
		overflow: hidden;
		border: 0;
		text-indent: -999em;
		position: absolute;
		z-index: 2; 
		opacity: 0;
		filter: alpha(opacity=0);
		top: 50%;
		margin-top: -39px;
		@include transition('opacity .67s');

		&.prev { 
			left: 30px;
			background-position: top left;
		}

		&.next {
			right: 30px;
			background-position: top right;
		}
	}

	&:hover {
		button {
			opacity: 1;
			filter: alpha(opacity=100);
		}
	}


	ul {
		list-style: none;
		margin: 0;
		padding: 0;
		font-size: 0;
		height: 100%;
		white-space: nowrap;
		position: relative;
	}

	li {
		display: inline-block;
		vertical-align: top;
		width: 100%;
		height: 425px;
		position: relative;
		z-index: 1; 
		overflow: hidden;
		white-space: normal;
	
		figure {
			display: block;
			height: 425px;
			position: relative;
			text-align: center;
		}

		figcaption {
			position: absolute;
			z-index: 2;
			top: 310px;
			left: 50%;
			margin-left: -490px;
			> span { display: none; }
		}

		img {
			position: absolute;
			display: block;
			height: 425px;
			width: 1920px;
			margin: 0 auto;
			left: 50%;
			margin-left: -960px;
		}
	
		a {
			font-size: 11px;
			@extend %orangebtt;
			@extend %orangebtt-m;
			@include color(#fff);
			text-transform: uppercase;
			display: block;
		}
	}

	.lte-ie8 & {
		ul {
			overflow: hidden;
		}
		li {
			display: inline-block;
			*display: inline;
			*zoom: 1;
			width: auto;
		}
	}

}


