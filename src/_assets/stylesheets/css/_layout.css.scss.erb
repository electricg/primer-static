@import "mixins";
@import "normalize"; 
@import "variables"; 


*, *:after, *:before { @extend %borderbox; }

html, body { font-size: 13px; }
 

body[data-env="dev"] {
	&:before {
		display: block;
		position: fixed; 
		z-index	: 32767;
		top: 1px; right: 1px;
		padding : .1em .5em;
		background: #ccc;
		color: #313131;
		opacity: .4;
		font: 3.6em Inconsolata, "Courier new", Courier;
		pointer-events: none;
		@include respond-to($mobile) 		 { content: "#{$mobile}"; }
		@include respond-to($mobile-large)   { content: "#{$mobile-large}"; }
		@include respond-to($tablet-small) 	 { content: "#{$tablet-small}"; }
		@include respond-to($tablet) 		 { content: "#{$tablet}"; }
		@include respond-to($desktop) 		 { content: "#{$desktop}"; }
		@include respond-to($desktop-medium) { content: "#{$desktop-medium}"; }
		@include respond-to($desktop-large)  { content: "#{$desktop-large}";  }
	}

	&:hover:before {
		display: none;
	}

	.iframecontent & {
		content: "";
	}
}



