/* === HEADER === */

header {
	position: relative;
	z-index: 10;
	min-height: 127px;
	background: #fefefe url(#{$path-img}/header-bg.png) bottom left repeat-x;


	> div {
		padding-top: 70px;
		margin: 0 22px;
		min-height: 57px;
		position: relative;
		@extend %clearfix;
	}

	@include respond-to($desktop) {
		> div {
			width: 980px;
			margin: 0 auto;
		}
	}


	ul {
		list-style: none;
		margin: 0;
		padding: 0;
		@extend %clearfix;

		a {
			@include color(#{$color-gray});
			text-shadow: 1px 1px 1px #d8d8d8;

			&:hover {
				color: #fff;
			}
		}

	}

	nav {

		clear: left;
		padding-top: 20px;

		@include respond-to($desktop) {
			clear: none;
			float: left;
			padding: 0 23px 0 34px;
		}

		ul {
			@include respond-to($tablet-small) {
				position: relative;
				z-index: 1;
				left: -1em;
			
				a {
					padding: 5px 0;
				}
			}

			@include respond-to($desktop) {
				top: 5px;
				left: 0;
			}
		}




		li {
			font-size: 1.2em;
			height: 3.8em;
			line-height: 3.8em;

			a {
				padding: 0 1em;
			}
			&:first-child a {
				padding-left: 0;
			}

			@include respond-to($tablet-small) {
				font-size: 1.2em;
				height: 4.4em;
				line-height: 3.8em;
				float: left;
			
				&:first-child a {
					padding: 0 1em;
				}
			
			}


		}
		
		li + li {		
			a {
				border-left: 1px #cdcdcd solid;          
			} 
		} 

		+ nav {
			position: absolute;
			top: 0;
			left: 0;
			padding-top: 0;


			@include respond-to($desktop) {
				position: static;
			}
		}


		ul[role] {
			border-top: 1px #d8d8d8 solid;
			border-bottom: 1px #d8d8d8 solid;

			li:hover, li.current {
				background-color: #f4770e;
				text-indent: 10px;

				a {
					color: #fff;
					display: block;
					height: 100%;
					width: 100%;
				}
			}

			a {
				padding: 0;
				@include respond-to($tablet-small) {
					padding: 0 1em;
				}
			}

			@include respond-to($tablet-small) {
				border-top: 0;
				border-bottom: 0;
				
				li:hover, li.current {
					background: #f2670c url(#{$path-img}/bg-menu-current.png) top left no-repeat;
					height: 4em;
					text-indent: 0;
					border-bottom: .4em #b44d09 solid;


					+ li a {
						border-left: 1px transparent solid;
					}
				}
			}			

			@include respond-to($desktop) {
				margin-bottom: 0;
			}


			li + li {


				a {
					border-left: 0;          
				} 

				border-top: 1px #d8d8d8 solid;   

				@include respond-to($tablet-small) {				
					border-top: 0;

					a {
						border-left: 1px #cdcdcd solid;          
					} 

					&:hover a, &:hover + li a {
						border-left: 1px transparent solid;
					}
				}
			}

		}


	}
}

